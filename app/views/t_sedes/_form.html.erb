<%= form_for @t_sede do |f| %>

  <% if @t_sede.errors.any? %>  
    <div class="panel warning callout radius">      
      <strong><%= t('activerecord.errors.template.header', :model => TSede.model_name.human, :count => @t_sede.errors.count) %></strong>
      <ul>
      <% @t_sede.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Código:</label>
      </div>

      <div class="small-8 medium-4 large-2 columns">            
        <%= f.text_field :nCodSede %>
      </div>

      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Cabecera:</label>
      </div>

      <div class="small-8 medium-4 large-1 columns">              
          <% if  @t_sede.nCodCampus.nil?  %>
              <%= f.select :nCodCampus, options_for_select([["",0],["SÍ",1], ["NO", 2]], 0) %>
          <% else %>
              <% if  @t_sede.nCodCampus == @t_sede.nCodSede  %>
                  <%= f.select :nCodCampus, options_for_select([["",0],["SÍ",1], ["NO", 2]], 1) %>
              <% else %>
                  <%= f.select :nCodCampus,  options_for_select([["",0],["SÍ",1], ["NO", 2]], 2) %>
              <% end %>
          <% end %>
      </div>

      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Criticidad:</label>
      </div>

      <div class="small-8 medium-4 large-2 columns">
        <%= f.select :nCriticidad, options_for_select([["",nil],["Normal",0], ["Urgente", 1], ["Crítico", 2]], @t_sede.nCriticidad) %>
      </div>  

      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Estado:</label>
      </div>

      <div class="small-8 medium-4 large-3 columns end">      
        <%= f.select :nCodEstado, content_tag(:option,"",:value=>"")+options_from_collection_for_select(TEstadosSede.all, "nCodEstado", "cDescripcion", @t_sede.nCodEstado) %>        
      </div>
   </div>

   <div class="row">   
      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Nombre:</label>
      </div>

      <div class="small-8 medium-4 large-7 columns end">     
        <%= f.text_field :cNombre, required: "required" %>
      </div>

      <div class="small-4 medium-2 large-1 columns">
        <label for="middle-label">Distrito:</label>
      </div>

      <div class="small-8 medium-4 large-3 columns end">
              <%= f.select  :nDistrito, content_tag(:option,'',:value=>nil)+options_from_collection_for_select(TDistrito.all, "nDistrito", "cDistrito", @t_sede.nDistrito  ) %>
      </div>
  </div>

  <div class="row">
      <div class="small-4  medium-2 large-1 columns">
          <label for="middle-label">Dirección:</label>
       </div>

       <div class="small-8  medium-4 large-7 columns">              
          <%= f.text_field :cDireccion %>
       </div>
  
      <div class="small-4  medium-2 large-1 columns">
          <label for="middle-label">Cód.Postal:</label>
       </div>

       <div class="small-8  medium-4 large-3 columns">              
          <%= f.text_field :cCodPostal %>
       </div>
  </div>

  <div class="row">
       <div class="small-4  medium-2 large-1 columns">
         <label for="middle-label">DevicePool:</label>
       </div>

       <div class="small-8  medium-4 large-4 columns">          
        <%= f.select :cDevicePool, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TDevicePool.all, "cDevicePool", "cDevicePool", @t_sede.cDevicePool) %>

       </div>

       <div class="small-4  medium-2 large-1 columns">
          <label for="middle-label">Acrónimo:</label>
       </div>

       <div class="small-8  medium-4 large-2 columns">
          <% if  !@t_sede.nIdAcronimo.nil?  %>
              <%= select_tag( :nIdAcronimo, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TAcronimosSedeEdr.all, "nId", "cCodigo", @t_sede.nIdAcronimo)) %>
          <% else %>
              <%= select_tag( :nIdAcronimo, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TAcronimosSedeEdr.all, "nId", "cCodigo")) %>
          <% end %>
       </div>

       <div class="small-4  medium-2 large-1 columns">
         <label for="middle-label">Gestión:</label>
       </div>

       <div class="small-8  medium-4 large-3 columns end">

          <% if  @t_sede.nCodGestion.nil?  %>
              <%= f.select :nCodGestion, options_for_select([["Municipal",0],["Privada",1], ["Mixta", 2], ["Otras Administ", 3]], 0) %>
          <% else %>
              <%= f.select :nCodGestion, options_for_select([["Municipal",0],["Privada",1], ["Mixta", 2], ["Otras Administ", 3]], @t_sede.nCodGestion) %>
          <% end %>

       </div>
  </div>

  <div class="row margin-bottom">
       <div class="small-4  medium-2 large-1 columns">
         <label for="middle-label">Grupo:</label>
       </div>

       <div class="small-8  medium-4 large-4 columns">

          <% if  !@t_sede.nZona.nil?  %>
              <%= select_tag( :nZona, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TZona.all, "nCodZona", "cGrupo", @t_sede.nZona)) %>
          <% else %>
              <%= select_tag( :nZona, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TZona.all, "nCodZona", "cGrupo")) %>
          <% end %>
       </div>

       <div class="small-4  medium-2 large-1 columns">
          <label for="middle-label">Zona:</label>
       </div>

       <div class="small-8  medium-4 large-2 columns">

          <% if  !@t_sede.nZona.nil?  %>
              <%= select_tag( :nZona, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TZona.all, "nCodZona", "cZona", @t_sede.nZona)) %>
          <% else %>
              <%= select_tag( :nZona, content_tag(:option,'',:value=>"")+options_from_collection_for_select(TZona.all, "nCodZona", "cZona")) %>
          <% end %>
       </div>

       <div class="small-4  medium-2 large-1 columns">
         <label for="middle-label">ToIp:</label>
       </div>

       <div class="small-8  medium-4 large-3 columns end">   
           
          <% if  @t_sede.bSedeToIP.nil?  %>
              <%= select_tag(:nCodCampus, options_for_select([["",0],["SÍ",1], ["NO", 2]], 0)) %>
          <% else %>
              <% if @t_sede.bSedeToIP==true %>
                  <%= select_tag(:nCodCampus, options_for_select([["",0],["SÍ",1], ["NO", 2]], 1)) %>
              <% else %>
                  <%= select_tag(:nCodCampus,  options_for_select([["",0],["SÍ",1], ["NO", 2]], 2)) %>
              <% end %>
          <% end %>

       </div>
  </div>

  <!-- BOTONES -->
  <div class="row">
      <%= link_to '<< Volver', t_sedes_path, :class => "success button" %>        

      <% if can? :read, TSede %>                     
        <%= f.submit 'Guardar', class: 'success button' %>
      <% end %>      
  </div>


  <ul class="accordion margin-bottom" data-accordion="w2rdgi-accordion" data-multi-expand="true" data-allow-all-closed="true">
    
    <li class="accordion-item" >
      <a href="#" class="accordion-title">Unidad SAP/Edif.</a>
      <div class="accordion-content" data-tab-content="" >
          
          <p>UNIDAD SAP</p>

          <div class="row">
              <div class="small-4  medium-2 large-2 columns">
                  <label for="middle-label">Cod. Unidad:</label>
              </div>
              
              <div class="small-8  medium-10 large-2 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.nCodUni rescue nil %></label>
              </div>
         
              <div class="small-4 medium-2 large-2 columns">
                  <label for="middle-label">Unidad:</label>                    
              </div>
              
              <div class="small-8 medium-10 large-6 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.cDenominacion rescue nil %></label>
              </div>
          </div>

          <div class="row">
              <div class="small-4 medium-2 large-2 columns">
                  <label for="middle-label">Dirección:</label>                    
              </div>
              
              <div class="small-8 medium-10 large-10 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.cDir rescue nil %></label>
              </div>
          </div>

          <div class="row">
              <div class="small-4 medium-2 large-2 columns">                    
                  <label for="middle-label">Cod. Postal:</label>
              </div>
              
              <div class="small-8 medium-2 large-2 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.cCodPostal rescue nil %></label>
              </div>
          
              <div class="small-4 medium-2 large-2 columns">
                  <label for="middle-label">Municipio:</label>                    
              </div>
              
              <div class="small-8 medium-6 large-6 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.cMunicipio rescue nil %></label>
              </div>
          </div>

          <div class="row">
              <div class="small-4  medium-2 large-2 columns">                    
                  <label for="middle-label">Centro Coste:</label>
              </div>
              
              <div class="small-8 medium-10 large-10 columns">
                  <label for="middle-label"><%= @t_sede.TUnidad.cCodCenCoste rescue nil %></label>
              </div>
          </div>

          <br>
          
          <p>EDIFICIO SAP</p>

          <div class="row">
              <div class="small-4  medium-2 large-2 columns">
                  <label for="middle-label">Código:</label>
              </div>
              
              <div class="small-8  medium-10 large-10 columns">
                  <label for="middle-label"><%= @t_sede.TEdificio.nCodEdificio rescue nil %></label>
              </div>
          </div>

          <div class="row">
              <div class="small-4  medium-2 large-2 columns">
                  <label for="middle-label">Dirección:</label>
              </div>

              <div class="small-8  medium-10 large-10 columns">
                  <label for="middle-label"><%= @t_sede.TEdificio.cTipoVia rescue nil %> <%= @t_sede.TEdificio.cNombreCalle rescue nil %></label>
              </div>
          </div>

          <div class="row">
              <div class="small-4  medium-2 large-2 columns">                    
                  <label for="middle-label">Número:</label>
              </div>
              
              <div class="small-8  medium-2 large-2 columns">
                  <label for="middle-label"><%= @t_sede.TEdificio.cNumero rescue nil %></label>
              </div>
         
              <div class="small-4 medium-2 large-2 columns">
                  <label for="middle-label">Cód. Postal:</label>                    
              </div>
              
              <div class="small-8  medium-2 large-2 columns">
                  <label for="middle-label"><%= @t_sede.TEdificio.cCodPostal rescue nil %></label>
              </div>
          
              <div class="small-4  medium-2 large-2 columns">                    
                  <label for="middle-label">Municipio:</label>
              </div>
              
              <div class="small-8  medium-2 large-2 columns">
                  <label for="middle-label"><%= @t_sede.TEdificio.cMunicipio rescue nil %></label>
              </div>
          </div>

      </div>
    </li>

    <li class="accordion-item">
      <a href="#" class="accordion-title">Contacto</a>
      <div class="accordion-content" data-tab-content="" >      
          
          <div class="row">
              <div class="small-5  medium-2 large-1 columns">
                  <label for="middle-label">Persona:</label>
              </div>
              <div class="small-7  medium-10 large-5 columns">                      
                  <%= f.text_field :cPersonaContacto %>
              </div>
          
              <div class="small-5  medium-2 large-1 columns">
                  <label for="middle-label">Mail:</label>
              </div>

              <div class="small-7  medium-10 large-5 columns">                      
                  <%= f.text_field :ceMailContacto %>
              </div>
          </div>
          
          <div class="row">
              <div class="small-5  medium-2 large-1 columns">
                  <label for="middle-label">Fijo:</label>
              </div>

              <div class="small-7  medium-4 large-2 columns">                      
                  <%= f.text_field :cTelefonoContacto %>
              </div>
          
              <div class="small-5  medium-3 large-2 columns large-text-right ">
                  <label class = " " for="middle-label">Corto Fijo:</label>
              </div>
              
              <div class="small-7  medium-3 large-1  columns">                      
                  <%= f.text_field :cCortoFijo %>
              </div>
          
              <div class="small-5  medium-2 large-1 columns">
                  <label for="middle-label">Móvil:</label>
              </div>
              
              <div class="small-7  medium-4 large-2 columns">                      
                  <%= f.text_field :cMovilContacto %>
              </div>
         
              <div class="small-5  medium-3 large-2 columns large-text-right">
                  <label for="middle-label">Corto Móvil:</label>
              </div>
              
              <div class="small-7  medium-3 large-1 columns">                      
                  <%= f.text_field :cCortoMovil %>
              </div>
          </div>

           <div class="row margin-bottom">
              <div class="small-5  medium-2 large-1 columns">
                  <label for="middle-label">Observac.:</label>
              </div>

              <div class="small-7  medium-10 large-11 columns">                      
                  <%= f.text_field :cPersonaContactoObserv %>
              </div>
          </div>

          <label class="" for="middle-label">TÉCNICOS SICAM:</label>
          <br>
          <div class="">
              
              <table class="stack">
                  <thead class="color-cabecera">                                              
                      <tr>                
                          <th>Técnico</th>
                          <th>Tlf. Fijo</th>
                          <th>Tlf. Móvil</th>
                          <th>E-Mail</th>
                      </tr>
                  </thead>
              
                  <tbody>                
                      <% @t_sede.t_sicam_persona_grupos.each do |t| %>
                          <tr>        
                              <td><%=  t.Full_Name %></td>           
                              <td><%=  t.SICAM_txt_telefono_contacto %></td>    
                              <td><%=  t.Phone_Number_Mobile %></td>    
                              <td><%=  t.Internet_E_mail %></td>                               
                          </tr>                    
                      <% end %>                
                  </tbody>
              </table>
          </div>

      </div>

    </li>

    <li class="accordion-item">
      <a href="#" class="accordion-title">Infraestructura</a>
      <div class="accordion-content" data-tab-content="" >
        Panel Infraestructura
      </div>
    </li>

    <li class="accordion-item">
      <a href="#" class="accordion-title">Actuaciones</a>
      <div class="accordion-content" data-tab-content="" >
        Panel Actuaciones
      </div>
    </li>

    <li class="accordion-item">
      <a href="#" class="accordion-title">Ubicación en mapa</a>
      <div class="accordion-content" data-tab-content="" >
          <div class="row text-center" >
              <% if @t_sede.cLatitud.nil?  %>
                  <iframe 
                      width="800" 
                      height="400" 
                      frameborder="0" 
                      scrolling="no" 
                      marginheight="0" 
                      marginwidth="0" 
                      src="https://www.google.es/maps/embed/v1/place?key=AIzaSyANl_IlDg2a1xumlDuMC4-c5QHFYYGUHUc
                      &q=<%= @t_sede.cDireccion %>">                            
                  </iframe>

              <% else %>

                  <iframe 
                      width="800" 
                      height="400" 
                      frameborder="0" 
                      scrolling="no" 
                      marginheight="0" 
                      marginwidth="0" 
                      src = "https://maps.google.com/maps?q=<%= @t_sede.cLatitud %>,<%= @t_sede.cLongitud%>
                      &z=20&amp;output=embed&amp;iwloc=">                            
                  </iframe>
              <% end %>
              
          </div>

      </div>

    </li>

  </ul>

<% end %>