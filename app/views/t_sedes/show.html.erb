<section class="padding-top padding-bottom margin-left">

    <ul class="accordion" data-accordion="w2rdgi-accordion" data-multi-expand="true" data-allow-all-closed="true">
      
      <li class="accordion-item" >
        <a href="#" class="accordion-title">Unidad SAP/Edif.</a>
        <div class="accordion-content" data-tab-content="" >
          Panel 1. Lorem ipsum dolor
        </div>
      </li>

      <li class="accordion-item">
        <a href="#" class="accordion-title">Contacto</a>
        <div class="accordion-content" data-tab-content="" >      
            
            <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Persona:</p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.cPersonaContacto %> </p>
                 </div>
            </div>

            <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Mail:</p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.ceMailContacto %></p>
                 </div>
            </div>
            
            <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Fijo: </p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.cTelefonoContacto %></p>
                 </div>
            </div>
            
           <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Corto Fijo: </p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.cCortoFijo %></p>
                 </div>
            </div>
            
            <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Móvil:</p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.cMovilContacto %></p>
                 </div>
            </div>

            <div class="row">
                <div class="small-3  medium-2 large-2 columns">
                    <p>Corto Móvil:</p>
                 </div>
                 <div class="small-9  medium-10 large-10 columns">
                    <p><%= @t_sede.cCortoMovil %></p>
                 </div>
            </div>

        </div>

      </li>

      <li class="accordion-item">
        <a href="#" class="accordion-title">Infraestructura</a>
        <div class="accordion-content" data-tab-content="" >
          Panel 3. Lorem ipsum dolor
        </div>
      </li>

      <li class="accordion-item">
        <a href="#" class="accordion-title">Actuaciones</a>
        <div class="accordion-content" data-tab-content="" >
          Panel 4. Lorem ipsum dolor
        </div>
      </li>

      <li class="accordion-item">
        <a href="#" class="accordion-title">Ubicación en mapa</a>
        <div class="accordion-content" data-tab-content="" >
            <div class="row text-center" >

                <% if @t_sede.cLatitud.nil?  %>
                    <iframe 
                        width="800" 
                        height="400" 
                        frameborder="0" 
                        scrolling="no" 
                        marginheight="0" 
                        marginwidth="0" 
                        src="https://www.google.es/maps/embed/v1/place?key=AIzaSyANl_IlDg2a1xumlDuMC4-c5QHFYYGUHUc
                        &q=<%= @t_sede.cDireccion %>">                            
                    </iframe>

                <% else %>

                    <iframe 
                        width="800" 
                        height="400" 
                        frameborder="0" 
                        scrolling="no" 
                        marginheight="0" 
                        marginwidth="0" 
                        src = "https://maps.google.com/maps?q=<%= @t_sede.cLatitud %>,<%= @t_sede.cLongitud%>
                        &z=20&amp;output=embed&amp;iwloc=">                            
                    </iframe>
                <% end %>
                
            </div>

        </div>

      </li>

    </ul>

</section>





