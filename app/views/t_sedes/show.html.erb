    <div class="row">
        <div class="small-3  medium-2 large-2 columns">
            <p>Nombre:</p>
         </div>
         <div class="small-9  medium-10 large-10 columns">
            <p><%= @t_sede.cNombre %></p>
         </div>
    </div>

    <div class="row">
        <div class="small-3  medium-2 large-2 columns">
            <p>Dirección:</p>
         </div>
         <div class="small-9  medium-10 large-10 columns">
            <p><%= @t_sede.cDireccion %></p>
