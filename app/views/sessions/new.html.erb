
<% provide(:title, "Iniciar Sesión") %>

<section> 
<div>

<h2>Iniciar Sesión</h2>

    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :cCodUsuario, "Cod.Usuario" %>
      <%= f.text_field :cCodUsuario %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Iniciar Sesión" %>
    <% end %>
</div>
</section>