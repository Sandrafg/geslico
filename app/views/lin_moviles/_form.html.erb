<%= form_for(@lin_movil) do |f| %>
  <% if @lin_movil.errors.any? %>
    <div class="panel warning callout radius">
      <strong><%= t('activerecord.errors.template.header', :model => Usuario.model_name.human, :count => @lin_movil.errors.count) %></strong>
      <ul>
      <% @lin_movil.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.fields_for :linea, @lin_movil.linea do |ff| %>
  <%= f.fields_for :persona, @lin_movil.persona do |fp| %>
    <div class="row">
      <div class="small-4 medium-2 large-1 columns">
        <%= ff.label :cNumero, for: 'middle-label' %>
      </div>
      <div class="small-8 medium-4 large-3 columns">
        <%= ff.text_field :cNumero  %>
      </div>
      <div class="small-4 medium-2 large-1 columns">
        <%= ff.label :cNumCorto, for: 'middle-label' %>
      </div>
      <div class="small-8 medium-4 large-2 columns">
        <%= ff.text_field :cNumCorto, for: 'middle-label' %>
      </div>
      <div class="small-8 medium-4 large-2 columns">
        <%= ff.label :nCodEstLin, for: 'middle-label' %>
      </div>
      <div class="small-8 medium-4 large-3 columns">
      <%= ff.select :nCodEstLin, options_from_collection_for_select(EstadosLinea.all, "nCodEstLin", "cDescEstado", :nCodEstLin)  %>      
      </div>
    </div>

    <ul class="accordion margin-bottom" data-accordion data-multi-expand="true" data-allow-all-closed="true">
      <!--- SAP -->
      <li class="accordion-item" data-accordion-item>
          <a href="#" class="accordion-title">Empleado</a>
          <div class="accordion-content" data-tab-content >                                  
            
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cDNI %>
              </div>
              <div class="small-8 medium-4 large-5 columns">
                <%= fp.text_field :cDNI  %>
              </div>  
          
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cnombre %>
              </div>
              <div class="small-8 medium-4 large-5 columns">
                <%= fp.text_field :cnombre  %>
              </div>
            
              <div class="row">
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cape1 %>
              </div>
              <div class="small-8 medium-4 large-5 columns">
                <%= fp.text_field :cape1  %>
              </div>
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cape2 %>
              </div>
              <div class="small-8 medium-4 large-5 columns">
                <%= fp.text_field :cape2  %>
              </div>
              </div>
              <div class="row">


              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :nempnumper %>
              </div>
              <div class="small-8 medium-4 large-2 columns">
                <%= fp.text_field :nempnumper  %>
              </div>
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cempnompuesto %>
              </div>
              <div class="small-8 medium-4 large-4 columns">
                <%= fp.text_field :cempnompuesto  %>
              </div>
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :cempgrupotit %>
              </div>
              <div class="small-8 medium-4 large-1 columns">
                <%= fp.text_field :cempgrupotit  %>
              </div>
              <div class="small-4 medium-2 large-1 columns">
                <%= fp.label :nempnivel %>
              </div>
              <div class="small-8 medium-4 large-1 columns">
                <%= fp.text_field :nempnivel  %>
              </div>
              </div>
          </li>
        </ul>
  <% end %>  
  <% end %>        
<% end %>
